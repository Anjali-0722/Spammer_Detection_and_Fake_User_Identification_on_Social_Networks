<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>db</servlet-name>
        <servlet-class>com.spam.db.db</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DBConnection</servlet-name>
        <servlet-class>com.spam.db.DBConnection</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userregisteraction</servlet-name>
        <servlet-class>com.spam.actions.userregisteraction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.spam.actions.userlogincheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userlogin</servlet-name>
        <servlet-class>com.spam.actions.userlogincheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminlogincheck</servlet-name>
        <servlet-class>com.spam.actions.adminlogincheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserUpdateProfile</servlet-name>
        <servlet-class>com.spam.actions.UserUpdateProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserComposeTweets</servlet-name>
        <servlet-class>com.spam.actions.UserComposeTweets</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>db</servlet-name>
        <url-pattern>/db</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DBConnection</servlet-name>
        <url-pattern>/DBConnection</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userregisteraction</servlet-name>
        <url-pattern>/userregisteraction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userlogin</servlet-name>
        <url-pattern>/userlogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminlogincheck</servlet-name>
        <url-pattern>/adminlogincheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserUpdateProfile</servlet-name>
        <url-pattern>/UserUpdateProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserComposeTweets</servlet-name>
        <url-pattern>/UserComposeTweets</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
